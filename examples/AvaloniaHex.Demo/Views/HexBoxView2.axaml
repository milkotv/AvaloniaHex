<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:avaloniaHex="clr-namespace:AvaloniaHex;assembly=AvaloniaHex"
			 xmlns:rendering="clr-namespace:AvaloniaHex.Rendering;assembly=AvaloniaHex"
			 xmlns:editing="clr-namespace:AvaloniaHex.Editing;assembly=AvaloniaHex"			 
             x:Class="AvaloniaHex.Demo.Views.HexBoxView2">

	<UserControl.Styles>
		<Style Selector="editing|CaretLayer">
			<Setter Property="BlinkingInterval" Value="00:00:00.2"/>
		</Style>
	</UserControl.Styles>
	
	<Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*" MinWidth="200">

		<avaloniaHex:HexEditorExt MinHeight="20"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"			
			x:Name="HexBoxExt"
			BorderBrush="{DynamicResource MainBorderBrush}"
			BorderThickness="1"
			FontSize="14"
			FontFamily="{StaticResource SourceCodeProFont}">
			<avaloniaHex:HexEditorExt.Columns>
				<rendering:OffsetColumn IsVisible="False"/>
				<rendering:HexColumn />
				<rendering:BinaryColumn IsVisible="False" />
				<rendering:AsciiColumn InvalidCellChar="?" IsVisible="False"/>
			</avaloniaHex:HexEditorExt.Columns>			
		</avaloniaHex:HexEditorExt>

		<Grid Grid.Row="1">
			<TextBlock Name="LabelMode" HorizontalAlignment="Left" FontSize="10"/>
			<TextBlock Name="LabelBytes" HorizontalAlignment="Right" FontSize="10"/>
		</Grid>

		<Grid.ContextMenu>
			<ContextMenu Name="ContextMenu">
				<MenuItem Header="Bytes Per Line">
					<NumericUpDown Name="MenuBytesPerLine"
						Width="50"
						Minimum="1"
						Maximum="64"
						FormatString="0" />
				</MenuItem>
				<MenuItem Header="View">
					<CheckBox Name="MenuShowOffset">Offset</CheckBox>
					<CheckBox Name="MenuShowHex" IsChecked="True">Hex</CheckBox>
					<CheckBox Name="MenuShowBinary">Binary</CheckBox>
					<CheckBox Name="MenuShowAscii">Ascii</CheckBox>
					<CheckBox Name="MenuShowMode" IsChecked="True">Caret Mode</CheckBox>
					<CheckBox Name="MenuShowPosition" IsChecked="True">Caret Position</CheckBox>
				</MenuItem>
			</ContextMenu>
		</Grid.ContextMenu>
	</Grid>
	
</UserControl>
